<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.info.InfoActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:title="개발자 정보"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btn_info_openSource"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="오픈소스 라이브러리"
            android:textSize="20sp"

            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/tb_info"
            app:layout_constraintStart_toStartOf="@id/line_st"
            app:layout_constraintEnd_toEndOf="@id/line_end"
            />

        <Button
            android:id="@+id/btn_info_club"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="동아리 정보 보기"
            android:textSize="20sp"

            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/btn_info_openSource"
            app:layout_constraintStart_toStartOf="@id/line_st"
            app:layout_constraintEnd_toEndOf="@id/line_end"
            />

        <Button
            android:id="@+id/btn_info_developer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="개발자 정보 보기"
            android:textSize="20sp"

            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/btn_info_club"
            app:layout_constraintStart_toStartOf="@id/line_st"
            app:layout_constraintEnd_toEndOf="@id/line_end"
            />


        <Button
            android:id="@+id/btn_info_donation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="개발자 후원"
            android:textSize="20sp"
            android:backgroundTint="@color/edcan_navy"

            android:layout_marginBottom="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/line_st"
            app:layout_constraintEnd_toEndOf="@id/line_end"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>